{
  "private": true,
  "name": "@ball-maps/ucsd-core",
  "description": "Open Street Maps data library",
  "license": "ISC",
  "author": "Joshua Ball <jball@highseas.com>",
  "homepage": "https://github.com/joshball/ball-maps#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshball/ball-maps.git"
  },
  "bugs": {
    "url": "https://github.com/joshball/ball-maps/issues"
  },
  "version": "1.0.0",
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "directories": {
    "lib": "build",
    "test": "tests"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "clean": "rimraf build",
    "cleanup:packages": "yarn run prettier-package-json --write",
    "test": "yarn run build && yarn run nyc ava --verbose",
    "test:watch": "yarn run build && yarn run ava --watch"
  },
  "dependencies": {
    "@ball-maps/geo-core": "^1.0.0",
    "@ball-maps/osm-data": "^1.0.0",
    "axios": "^0.18.0"
  },
  "devDependencies": {
    "@types/node": "^10.12.2",
    "ava": "^0.25.0",
    "ava-ts": "^0.25.2",
    "axios": "^0.18.0",
    "axios-mock-adapter": "^1.15.0",
    "nyc": "^13.1.0",
    "prettier-package-json": "^2.0.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.6"
  },
  "ava": {
    "snapshotDir": "./snapshots",
    "failFast": true,
    "files": [
      "build/**/*.spec.js"
    ],
    "sources": [
      "build/**/*.js"
    ]
  }
}
