{
  "private": true,
  "name": "@ball-maps/geo-core",
  "description": "Open Street Maps data library",
  "license": "ISC",
  "author": "Joshua Ball <jball@highseas.com>",
  "homepage": "https://github.com/joshball/ball-maps#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshball/ball-maps.git"
  },
  "bugs": {
    "url": "https://github.com/joshball/ball-maps/issues"
  },
  "version": "1.0.0",
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "directories": {
    "lib": "build",
    "test": "tests"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "clean": "rimraf build",
    "clean:node_modules": "rimraf node_modules",
    "cleanup:packages": "yarn run prettier-package-json --write",
    "test": "yarn run build && yarn run nyc ava --verbose",
    "test:watch": "yarn run ava-ts --watch --verbose src/**/*.spec.ts"
  },
  "ava": {
    "snapshotDir": "./snapshots",
    "failFast": true,
    "files": [
      "build/**/*.spec.js"
    ],
    "sources": [
      "build/**/*.js"
    ]
  },
  "devDependencies": {
    "@types/leaflet": "^1.4.0",
    "ava": "^1.1.0",
    "ava-ts": "^0.25.2",
    "nyc": "^13.1.0"
  },
  "dependencies": {
    "@turf/turf": "^5.1.6"
  }
}
